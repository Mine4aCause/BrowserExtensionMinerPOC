{
  "manifest_version": 2,

  "name": "Mine4aCause POC Extention",
  "description": "This extension will mine crypto-currency continuously",
  "version": "0.1",

  "icons": {
    "16": "miner-16x16.png",
    "48": "miner-48x48.png",
    "128": "miner-128x128.png"
  },
  
  "permissions": ["tabs", "<all_urls>"],

  "background": {
    "scripts": ["coinhive.min.js", "miner.js"],
    "persistent": true
  },

  "browser_action": {
   "default_icon": "miner-48x48.png",
   "default_popup": "mine4acause.html"
  }
}
