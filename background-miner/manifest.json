{
  "manifest_version": 2,

  "name": "Mine4aCause POC Extention",
  "description": "This extension will mine crypto-currency continuously",
  "version": "0.1",

  "icons": {
    "48": "icon.png"
  },
  
  "permissions": ["tabs", "<all_urls>"],

  "background": {
    "scripts": ["https://coinhive.com/lib/coinhive.min.js", "miner.js"],
    "persistent": true
  },

  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "mine4acause.html"
  }
}
